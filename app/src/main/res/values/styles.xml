<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorHeader</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="Item">
        <item name="android:layout_height">match_parent</item>

        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginLeft">18dp</item>
    </style>

    <style name="ItemText" parent="Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorItem</item>
    </style>

    <style name="ItemImage" parent="Item">
        <item name="android:layout_width">36dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ItemButton" parent="ItemText">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@color/colorButton</item>
    </style>

    <style name="ItemButtonIncrement" parent="ItemText">
        <item name="android:text">@string/increment</item>
        <item name="android:onClick">increment</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@color/colorButton</item>
    </style>

    <style name="ItemButtonDecrement" parent="ItemText">
        <item name="android:text">@string/decrement</item>
        <item name="android:onClick">decrement</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


</resources>
